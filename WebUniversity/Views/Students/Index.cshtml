@model IEnumerable<WebUniversity.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Person.firstname + " " + model.Person.lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecordBook.number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Group.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Person.firstname + " " + item.Person.lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecordBook.number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Group.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
